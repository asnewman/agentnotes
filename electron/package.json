{
  "name": "agentnotes-electron",
  "version": "1.0.0",
  "description": "Electron app for AgentNotes",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "esbuild src/renderer.ts --bundle --outfile=src/bundle.js --format=iife --platform=browser",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.renderer.json",
    "lint": "eslint . --ext .ts",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron ."
  },
  "dependencies": {
    "@tiptap/core": "^2.1.0",
    "@tiptap/extension-highlight": "^2.1.0",
    "@tiptap/pm": "^2.1.0",
    "@tiptap/starter-kit": "^2.1.0",
    "electron": "^28.0.0",
    "electron-store": "^8.1.0",
    "gray-matter": "^4.0.3",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "esbuild": "^0.19.0",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2"
  }
}
